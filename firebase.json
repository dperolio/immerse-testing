{
  "hosting": {
    "public": "functions/client",
    "ignore": [
      "**/src/**",
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/public/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "handler"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "localhost",
      "port": 3000
    }
  }
}